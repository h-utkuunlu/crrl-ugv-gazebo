<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find crrl_ugv_control)/config/crrl_ugv.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner"
        pkg="controller_manager"
	type="spawner" respawn="false"
	output="screen"
	ns="/crrl_ugv"
	args="joint_state_controller rightFwdWheel_effort_controller leftFwdWheel_effort_controller rightBwdWheel_effort_controller leftBwdWheel_effort_controller"
  />

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
    <param name="robot_description" command="$(find xacro)/xacro.py '$(find crrl_ugv_desc)/urdf/crrl_ugv.xacro'" />
    <remap from="/joint_states" to="/crrl_ugv/joint_states" />
  </node>

</launch>